{
  "prettier.enable": false,
  "editor.defaultFormatter": "EditorConfig.EditorConfig",
  "css.lint.unknownAtRules": "ignore",
  "tailwindCSS.experimental.classRegex": [
    [
      "tw`(.*?)`",
      "tw\\('(.*?)'\\)"
    ],
    [
      "ui:\\s*{([^)]*)\\s*}",
      "[\"'`]([^\"'`]*).*?[\"'`]"
    ],
    [
      "/\\*ui\\*/\\s*{([^;]*)}",
      ":\\s*[\"'`]([^\"'`]*).*?[\"'`]"
    ]
  ],
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "editor.quickSuggestions": {
    "strings": true
  }
}
